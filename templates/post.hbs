<div class="row">
  <h1>{{title}}</h1>

  {{#if isEditing}}
    <form>
      <label for="title">Title</label>
      {{input id="title" value=title}}
      <br>
      <label for="body">body</label>
      {{textarea id="body" rows="15" value=body}}
      <br>
      <button class="button" {{action 'save'}}>Save</button>
    </form>
  {{else}}
    <p>{{body}}</p>
    <button class="button small" {{action 'edit'}}>Edit</button>
    <button class="button small" {{action 'delete'}}>Delete</button>
  {{/if}}

  <h2>Comments</h2>

  {{#each comments}}
    <p>{{text}}</p>
  {{/each}}

  <p>{{#link-to 'new-comment' this.id class="button tiny"}}New Comment{{/link-to}}</p>

  {{outlet}}
</div>